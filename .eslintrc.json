{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "svelte3",
    "prettier"
  ],
  "extends": ["prettier"],
  "overrides": [{
    "files": ["**/*.svelte"],
    "processor": "svelte3/svelte3",
    "rules": {
      "prettier/prettier": 0,
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }],
  "rules": {
    "prettier/prettier": "error"
  }
}