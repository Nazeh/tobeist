{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "webpack-dev-server --content-base public",
    "lint:js": "eslint --fix src/**/*.{js,svelte}",
    "lint:css": "stylelint src/**/*.{js,svelte}",
    "format": "prettier --write src/**/{*.svelte,*.js}",
    "lint": "npm run lint:js && npm run lint:css && npm run format",
    "test": "npm run lint"
  },
  "pre-commit": "lint",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "mini-css-extract-plugin": "^0.6.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "serve": "^11.0.0",
    "style-loader": "^0.23.1",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "svelte": "^3.0.0",
    "svelte-loader": "2.13.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "firebase": "^7.8.2",
    "rxfire": "^3.9.11",
    "rxjs": "^6.5.4"
  }
}
