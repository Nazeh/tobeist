{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn postcss:build && cross-env NODE_ENV=production webpack",
    "dev": "webpack-dev-server --content-base public",
    "lint:js": "eslint --fix src/**/*.{js,svelte}",
    "lint:svelte": "prettier --write 'src/**/*.svelte'",
    "postcss": "postcss src/styles/main.css -o public/global.css",
    "postcss:watch": "yarn postcss -w",
    "postcss:build": "cross-env NODE_ENV=production yarn postcss",
    "lint:css": "stylelint src/**/*.{js,svelte}",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:svelte",
    "test": "yarn lint"
  },
  "pre-commit": "lint",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "firebase": "^7.8.2",
    "mini-css-extract-plugin": "^0.6.0",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rxfire": "^3.9.11",
    "rxjs": "^6.5.4",
    "serve": "^11.0.0",
    "style-loader": "^0.23.1",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "svelte": "^3.0.0",
    "svelte-loader": "2.13.3",
    "tailwindcss": "^1.2.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  }
}
